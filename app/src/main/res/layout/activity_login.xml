<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.github.driesp.smartlockandroid.loginActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/usernameInput"
        android:width="750px"
        android:hint="email"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/passwordInput"
        android:layout_alignStart="@+id/passwordInput"
        android:allowUndo="false"
        android:inputType="textEmailAddress" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordInput"
        android:layout_below="@+id/usernameInput"
        android:layout_centerHorizontal="true"
        android:width="750px"
        android:layout_marginBottom="15px"
        android:hint="password" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/buttonSubmit"
        android:layout_below="@+id/passwordInput"
        android:layout_alignRight="@+id/passwordInput"
        android:layout_alignEnd="@+id/passwordInput"
        android:layout_marginTop="28dp"
        android:width="350px"
        android:layout_marginBottom="15px"
        android:textStyle="bold"
        android:typeface="normal"
        android:textColor="#ffffff"


        android:background="@drawable/roundedbutton"
        android:onClick="onLoginClick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Login"
        android:id="@+id/textView"
        android:layout_marginBottom="77dp"
        android:textStyle="bold"
        android:enabled="true"
        android:textColor="#5fcac0"
        android:textSize="175px"
        android:layout_above="@+id/passwordInput"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="remember me"
        android:id="@+id/rememberMe"
        android:checked="false"
        android:layout_alignTop="@+id/buttonSubmit"
        android:layout_alignLeft="@+id/passwordInput"
        android:layout_alignStart="@+id/passwordInput" />

</RelativeLayout>
